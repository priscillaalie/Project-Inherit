extends layout.pug

block css
    style
        include ../public/stylesheets/homepage.css
        include ../public/stylesheets/settings.css


block content
    .container-fluid.fill-height
        .row
            .col-xs-12.col-sm-12.col-md-3.col-lg-2.col-xl-2(style={
                'background-color': 'white;'
            })
                nav.fixed-left
                    .vertical-menu
                        br
                        a.active(href='/settings/general',style="color:#666666;") General
                        hr.my-4
                        a(href='/settings/security',style="color:#666666;") Security and Login
                        hr.my-4
                        a(href='#',style="color:#666666;") Delete Account

                        br
                        br

            .col-md-9.col-lg-10.col-xl-10.fade-in
                .jumbotron
                    .row
                        .col.col-md-6.col-lg-6.col-xl-6
                            h3 Delete Account

                    hr.my-4

                    form(method='POST' action='/settings/delete')
                        .row
                            .col
                                h5 Please enter your email and password to confirm
                        .row
                            .col
                                p(style='color: red;') NOTE: All account information, including artifacts and groups (where you are the admin) will be permanently erased.
                        .row
                            .col
                                div.form-group
                                    .row
                                        .col
                                            p EMAIL
                                            input.halfrow#username(type='text', name='email', autocomplete='new-text', placeholder='Email' required)
                                    br
                                    .row
                                        .col
                                            p PASSWORD
                                            input.halfrow#pw(type='password', name='password', autocomplete='new-password', placeholder='Password', required)
                            if (error)
                            .row
                                p #{error}
                        br
                        .row
                            .col.d-flex.justify-content-center
                                button.btn.btn-danger(type='submit') Delete Account

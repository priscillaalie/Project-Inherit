extends layout

block css
    style
        include ../public/stylesheets/login.css


block content
    .container(style={'background': 'url(https://images.unsplash.com/photo-1489644484856-f3ddc0adc923?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80) no-repeat center center fixed;', 'background-size': 'cover;'})
        .row
            .col-cs-12.col-sm-12.white.text-center
                h2.handwrite Signup
                br
        .row
            .col
                //img(src='https://images.unsplash.com/photo-1496776574435-bf184935f729?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80', style='width:100%;')


            .col-xs-12.col-sm-12.col-lg-6.col-xl-6.white
                br
                form(method='POST' action = '/add', novalidate='').needs-validation
                    .form-row
                        .col
                            label(for='validationCustom01') Name
                            input#validationCustom01.form-control(type='text' name = 'name' placeholder='John Doe' value='' required='')
                            .valid-feedback
                                | Looks good!
                    br
                    .form-row
                        .col
                            label(for='validationCustomUsername') Email
                            .input-group

                                input#validationCustomUsername.form-control(type='text' name = 'email' placeholder='example@email.com' aria-describedby='inputGroupPrepend' required='')
                                .invalid-feedback
                                    | Please choose a username.
                    br
                    .form-row
                        .col
                            label(for='inputPassword5') Password
                            input#inputPassword5.form-control(type='password' name = 'password' aria-describedby='passwordHelpBlock')
                            small#passwordHelpBlock.form-text.text-muted
                                | Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                    .form-row
                        .col
                            input#pw2(type='password', onkeyup="checkPasswords();",
                                placeholder='Retype Password*' name='confirmPassword',
                                autocomplete='new-password', required)
                    br

                    .form-group
                        .form-check
                            input#invalidCheck.form-check-input(type='checkbox' value='' required='')
                            label.form-check-label(for='invalidCheck')
                                | Agree to terms and conditions
                            .invalid-feedback
                                | You must agree before submitting.
                    .container.text-center

                        button.btn.btn-primary(type='submit') Submit form

                .text-center.mb-3
                    button.btn.blue-gradient.btn-block.btn-rounded.z-depth-1a(type='button') Sign in

                br

    script.
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
